<section class="container theme">
  <h3 class="Title">Login</h3>
  <div class="content-box ">
    <form class="formClass" action="/login" method="post">
      <label class="labels">Email</label>
      <br />
      <input class="input-area" type="email" name="Email" />
      <br />
      <label class="labels" for="">Password</label>
      <br />
      <input class="input-area"  type="password" name="Password"></inputclass="labels">
      <br />
      {{#if LoginErr}}
      <p class="error">Invalid Mobile Number Or Password</p>
      {{/if}}
      <a class="link" href="signup">Create new Account</a>
      <br />
      <input class="Btn" type="submit" value="Login" />
    </form>
  </div>
</section>