<section class="theme container">
  <div class="headText">
    <h2>Edit Question</h2>
  </div>
  <div class="form">
    <form action="" method="post">
      <label class="label" for="">Question</label><br />
      <textarea
        name="Question"
        class="textarea"
        id=""
        cols="30"
        rows="10"
      >{{data.Question}}</textarea><br />
      <label class="label" for="">Options</label><br />
      <input
        class="options"
        name="id"
        type="text"
        value="{{data._id}}"
        hidden
      /><br />
      <input
        class="optionsQ"
        name="A"
        type="text"
        value="{{data.A}}"
        placeholder="A"
      /><br />
      <input
        class="optionsQ"
        name="B"
        type="text"
        value="{{data.B}}"
        placeholder="B"
      /><br />
      <input
        class="optionsQ"
        name="C"
        type="text"
        value="{{data.C}}"
        placeholder="C"
      /><br />
      <input
        class="optionsQ"
        name="D"
        type="text"
        value="{{data.D}}"
        placeholder="D"
      /><br />
      <label class="label" for="">Correct Answer</label><br />
      <input
        class="correctAnswer"
        name="CorrectAnswer"
        type="text"
        value="{{data.CorrectAnswer}}"
      /><br />
      <label class="label" for="">Description</label><br />
      <textarea
        name="Description"
        class="textarea"
        id=""
        cols="30"
        rows="10"
      >{{data.Description}}</textarea><br />
      <input class="Btn" type="submit" value="Update" />
    </form>
  </div>
</section>